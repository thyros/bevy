{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		}, 
		{
			"label": "cargo fmt && run",
			"type": "shell",
			"command": "~/.cargo/bin/cargo fmt && ~/.cargo/bin/cargo run",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}